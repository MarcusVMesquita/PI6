@model IEnumerable<MyParking.DAL.Models.MarcaVeiculo>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Criar nova marca", "Create")
</p>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomeMarca)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeMarca)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id_marca }) |
                @Html.ActionLink("Deletar", "Delete", new { id = item.id_marca })
            </td>
        </tr>
    }
</table>
