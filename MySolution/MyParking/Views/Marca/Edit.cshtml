@model MyParking.DAL.Models.MarcaVeiculo

@{
    ViewBag.Title = "Edit";
}

<h2>Editar Marca</h2>

@using (@Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Marca de Veículo</legend>

        @Html.HiddenFor(model => model.ID)

        <div class="display-label">
            @Html.DisplayNameFor(model => model.NomeMarca)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NomeMarca)
            @Html.ValidationMessageFor(model => model.NomeMarca)
        </div>
        <p>
            <input type="submit" value="Salvar" />
        </p>
    </fieldset>
}

<div >@Html.ActionLink("Voltar", "Index")</div>