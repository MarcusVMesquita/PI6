@model MyParking.DAL.ViewData.MarcaViewData

@{
    ViewBag.Title = "Delete";
}

<h2>Deletar</h2>

<h3>Você tem certeza que quer deletar?</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <fieldset>
        <legend>Marca do Veículo</legend>

        @Html.HiddenFor(model => model.MarcaVeiculo.id_marca)

        <div class="display-label">
            @Html.DisplayNameFor(model => model.MarcaVeiculo.NomeMarca)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.MarcaVeiculo.NomeMarca)
        </div>
    </fieldset>
    
    <p>
        <input type="submit" value="Deletar" />
        | @Html.ActionLink("Voltar", "Index")
    </p>
    
    if (Model != null)
    {
        if (Model.Resultado != null)
        {
            if (Model.Resultado.tipoResultado != MyParking.Framework.Result.TipoResult.OK)
            {
                <div class="Mensagem">
                    @Html.Partial("_Mensagem", Model.Resultado)
                </div>
            }
        }
    }
}