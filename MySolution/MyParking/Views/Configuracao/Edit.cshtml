@model MyParking.DAL.ViewData.ConfiguracaoViewData

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend> Configuração de Vaga</legend>

        @Html.HiddenFor(model => model.Configuracao.id_configuracao);

        @*Quantidade de vagas*@
        <div class ="display-label">
            @Html.DisplayNameFor(model => model.Configuracao.qtdeVagas)
        </div>

        <div class ="editor-field">
            @Html.EditorFor(model => model.Configuracao.qtdeVagas)
            @Html.ValidationMessageFor(model => model.Configuracao.qtdeVagas)
        </div>

        @*Valor Primeira Hora*@
        <div class="display-label">
            @Html.DisplayNameFor(model => model.Configuracao.valorPrimeiraHora)
        </div>

        <div class="editor-field">
            @Html.EditorFor(model => model.Configuracao.valorPrimeiraHora)
            @Html.ValidationMessageFor(model => model.Configuracao.valorPrimeiraHora)
        </div>

        @*Valor Hora Adicional*@
        <div class="display-label">
            @Html.DisplayNameFor(model => model.Configuracao.valorHoraAdicional)
        </div>

        <div class="editor-field">
            @Html.EditorFor(model => model.Configuracao.valorHoraAdicional)
            @Html.ValidationMessageFor(model => model.Configuracao.valorHoraAdicional)
        </div>

        @*Valor Mensalista*@
        <div class="display-label">
            @Html.DisplayNameFor(model => model.Configuracao.valorMensalista)
        </div>

        <div class="editor-field">
            @Html.EditorFor(model => model.Configuracao.valorMensalista)
            @Html.ValidationMessageFor(model => model.Configuracao.valorMensalista)
        </div>

        <p>
            <input type="submit" value="Salvar" />
        </p>
 
        @if (Model != null)
        {
            if (Model.Result != null)
            {
                if (Model.Result.tipoResultado != MyParking.Framework.Result.TipoResult.OK)
                {
            <div class="Mensagem">
                @Html.Partial("_Mensagem", Model.Result)
            </div>
                }
            }
        }

    </fieldset>
    
    @Html.ActionLink("Voltar","Index")    
}
