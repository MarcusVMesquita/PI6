@model MyParking.DAL.ViewData.UsuarioViewData

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Você tem certeza que quer deletar?</h3>
<fieldset>
    <legend>Usuario</legend>

    @Html.HiddenFor(model => model.Usuario.id_usuario)

    <div class="display-label">
        @Html.DisplayNameFor(model => model.Usuario.Nome)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Usuario.Nome)
    </div>

    @if (Model != null)
    {
        if (Model.Resultado != null)
        {
            if (Model.Resultado.tipoResultado != MyParking.Framework.Result.TipoResult.OK)
            {
                <div class="Mensagem">
                    @Html.Partial("_Mensagem", Model.Resultado)
                </div>
            }
        }
    }
</fieldset>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <p>
        <input type="submit" value="Deletar" />
        | 
        @Html.ActionLink("Voltar", "Index")
    </p>
}