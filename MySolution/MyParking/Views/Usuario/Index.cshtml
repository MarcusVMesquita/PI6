@model IEnumerable<MyParking.DAL.Models.Usuario>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Criar Novo Usuário", "Create")
</p>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Login)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Administrador)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Administrador)
            </td>

            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id_usuario }) |
                @Html.ActionLink("Deletar", "Delete", new { id = item.id_usuario })
            </td>
        </tr>
    }
</table>
